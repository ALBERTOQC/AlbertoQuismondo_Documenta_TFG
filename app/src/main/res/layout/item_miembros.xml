<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/borde_suave">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_autonomo"/>

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textStyle="bold"
        android:textSize="17sp"
        android:paddingStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCorreo"/>

    <TextView
        android:id="@+id/txtRol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AutÃ³nomo"
        android:textSize="14sp"
        android:textColor="#444"
        app:layout_constraintStart_toStartOf="@id/txtNombre"
        app:layout_constraintTop_toBottomOf="@id/txtNombre"/>

    <TextView
        android:id="@+id/txtActividad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actividad del usuario..."
        android:textColor="#555"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/txtNombre"
        app:layout_constraintTop_toBottomOf="@id/txtRol"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <ImageButton
        android:id="@+id/btnCorreo"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:background="@android:color/transparent"
        android:contentDescription="Enviar correo"
        android:src="@android:drawable/ic_dialog_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



