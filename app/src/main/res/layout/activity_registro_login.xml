<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".RegistroLogin">

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="386dp"
        android:layout_height="696dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:contentDescription="Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/fotologin" />

        <!-- Texto introductorio -->
        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Accede a tu cuenta o regístrate si eres nuevo."
            android:textAlignment="center"
            android:textColor="#424242"
            android:textSize="13sp" />

        <!-- BLOQUE LOGIN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/borde_suave"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Iniciar sesión"
                android:textAlignment="center"
                android:textColor="#1565C0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#1565C0"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <EditText
                android:id="@+id/etContrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#1565C0"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#1565C0"
                android:text="Acceder"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- TEXTO SEPARADOR -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="¿Aún no perteneces a nuestra comunidad?"
            android:textAlignment="center"
            android:textColor="#424242"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Rellena los siguientes campos para registrarte:"
            android:textAlignment="center"
            android:textColor="#757575"
            android:textSize="12sp" />

        <!-- BLOQUE REGISTRO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_suave"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Registro de nuevo usuario"
                android:textAlignment="center"
                android:textColor="#1565C0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#1565C0"
                android:hint="Nombre completo"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <EditText
                android:id="@+id/etActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#1565C0"
                android:hint="Describe brevemente tu actividad (máx. 2 frases)"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="2"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <RadioGroup
                android:id="@+id/rgRoles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbAutonomo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autónomo"
                    android:textColor="#1565C0" />

                <RadioButton
                    android:id="@+id/rbSociedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sociedad"
                    android:textColor="#1565C0" />
            </RadioGroup>

            <Button
                android:id="@+id/btnRegistrarse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#78909C"
                android:text="Registrarse"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
