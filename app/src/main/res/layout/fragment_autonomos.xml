<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- ===================== -->
    <!-- VIDEO SUPERIOR        -->
    <!-- ===================== -->
    <VideoView
        android:id="@+id/videoAutonomos"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:keepScreenOn="true"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/bloque1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/videoAutonomos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgAutonomos"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/autonomos"
            android:scaleType="centerInside"
            android:contentDescription="Autónomos"/>

        <TextView
            android:id="@+id/tvTextoBloque1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ser autónomo nunca fue tan fácil.\nAccede a tu panel personal con modelos oficiales, agenda, facturación y herramientas exclusivas."
            android:textColor="#424242"
            android:textSize="16sp"
            android:paddingStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bloque2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/bloque1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/tvTextoBloque2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gestiona tus trámites con total seguridad y ten siempre a mano toda tu información fiscal.
Tu área personal centraliza tus documentos, recordatorios y gestiones importantes.
"
            android:textColor="#424242"
            android:textSize="16sp"
            android:paddingEnd="12dp"/>

        <ImageView
            android:id="@+id/imgExtraAutonomo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/autonomodocu"
            android:scaleType="centerInside"
            android:contentDescription="Autónomos Extra"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnAreaClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceder a mi área personal"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#1565C0"
        android:paddingHorizontal="28dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/bloque2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

