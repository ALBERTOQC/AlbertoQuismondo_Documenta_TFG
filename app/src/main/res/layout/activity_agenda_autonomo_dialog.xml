<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ—“ï¸ Agenda del autÃ³nomo"
            android:textAlignment="center"
            android:textColor="#1565C0"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona una fecha y hora"
            android:textAlignment="center"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnSeleccionarFecha"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Fecha"
                android:backgroundTint="#1565C0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:paddingVertical="4dp" />

            <Button
                android:id="@+id/btnSeleccionarHora"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="â° Hora"
                android:backgroundTint="#1565C0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescripciÃ³n del evento o recordatorio"
            android:backgroundTint="#1565C0"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top|start"
            android:layout_marginBottom="12dp" />

        <!-- Botones Guardar, Eliminar y Cerrar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ðŸ’¾ Guardar"
                android:backgroundTint="#1565C0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:paddingVertical="4dp" />

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ðŸ—‘ï¸ Eliminar"
                android:backgroundTint="#B71C1C"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:paddingVertical="4dp" />

            <Button
                android:id="@+id/btnCerrar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                android:backgroundTint="#757575"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- ListView con altura fija para mostrar varios eventos -->
        <ListView
            android:id="@+id/listaEventos"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="12dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

    </LinearLayout>
</ScrollView>

