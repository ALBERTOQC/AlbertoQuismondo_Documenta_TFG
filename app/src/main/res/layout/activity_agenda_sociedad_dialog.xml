<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#F6F7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tituloAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Agenda Corporativa"
            android:textAlignment="center"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@drawable/card_empresarial">


            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona fecha y hora"
                android:textAlignment="center"
                android:textColor="#333"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnSeleccionarFecha"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="ðŸ“… Fecha"
                    android:backgroundTint="#0D47A1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnSeleccionarHora"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="â° Hora"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#0D47A1" />
            </LinearLayout>


            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³n del evento"
                android:padding="12dp"
                android:background="@drawable/edittext_empresarial"
                android:minLines="2"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cliente o proyecto (opcional)"
                android:padding="12dp"
                android:background="@drawable/edittext_empresarial"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAgregar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="ðŸ’¾ Guardar"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#0D47A1" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnBorrar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="ðŸ—‘ï¸ Eliminar"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#C62828" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCerrar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Cerrar"
                android:textStyle="bold"
                android:backgroundTint="#757575"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_empresarial"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Eventos programados"
                android:textColor="#0D47A1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <ListView
                android:id="@+id/listaEventos"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
