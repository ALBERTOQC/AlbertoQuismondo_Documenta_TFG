<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sociedades.SociedadesFragment">


    <VideoView
        android:id="@+id/videoSociedades"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:keepScreenOn="true"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/videoSociedades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/imageSociedades"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:src="@drawable/sociedades"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvTextoBloque1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Si quieres gestionar tu sociedad de forma sencilla, aquí tienes todo lo necesario."
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnAreaClientesSociedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Área de Clientes"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="24dp"
                android:textStyle="bold"
                android:backgroundTint="#1565C0"
                android:textColor="@android:color/white"
                android:layout_gravity="center" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="36dp">

                <TextView
                    android:id="@+id/tvTextoBloque2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Si tu empresa crece, nosotros crecemos contigo. Nuevas herramientas para grandes empresas."
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/imageExtraSociedades"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:src="@drawable/documentasociedades"
                    android:scaleType="centerCrop"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tvLemaSociedades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu gestión empresarial, más sencilla que nunca"
                android:textColor="#666"
                android:textSize="14sp"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginTop="32dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



