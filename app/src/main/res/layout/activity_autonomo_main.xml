<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutonomoMainActivity">

    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIEMBROS DE LA COMUNIDAD"
        android:textColor="#222"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Conoce a los miembros de la comunidad Documenta."
        android:textColor="#555"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnVerUsuarios"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:contentDescription="Ver usuarios"
        android:src="@drawable/social"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion" />

    <TextView
        android:id="@+id/tvDocumentosTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOCUMENTOS NECESARIOS"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerUsuarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnVerInfoDocumentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver informaciÃ³n"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDocumentosTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvHacienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“„ Hacienda"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerInfoDocumentos"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layoutHacienda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvHacienda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modelo 036"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnDescargar036"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_save"
                android:contentDescription="Descargar Modelo 036" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modelo 037"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnDescargar037"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_save"
                android:contentDescription="Descargar Modelo 037" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvSeguridadSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ¦ Seguridad Social"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHacienda"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layoutSeguridadSocial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvSeguridadSocial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modelo TA0521 (Alta/Baja RETA)"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnDescargarTA0521"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_save"
                android:contentDescription="Descargar Modelo TA0521" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>