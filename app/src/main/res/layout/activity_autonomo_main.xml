<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".AutonomoMainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- CABECERA y Usuarios -->
            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MIEMBROS DE LA COMUNIDAD"
                android:textColor="#222"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conoce a los miembros de la comunidad Documenta."
                android:textColor="#555"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="12dp" />

            <ImageButton
                android:id="@+id/btnVerUsuarios"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/social"
                android:scaleType="fitCenter"
                android:contentDescription="Ver usuarios"
                android:layout_marginBottom="16dp" />

            <!-- Informaci贸n Documentos -->
            <Button
                android:id="@+id/btnVerInfoDocumentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="癸 Informaci贸n sobre documentos"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1565C0"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- BLOQUE DOCUMENTOS DESPLEGABLE (igual que antes) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/borde_suave"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/headerDocumentos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Documentos descargables para aut贸nomos"
                        android:textColor="#1565C0"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iconExpandir"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="Expandir lista" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutDocumentos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:divider="?android:attr/dividerVertical"
                    android:showDividers="middle">

                    <include layout="@layout/item_autonomo_documento" android:id="@+id/itemModelo036" />
                    <include layout="@layout/item_autonomo_documento" android:id="@+id/itemModelo037" />
                    <include layout="@layout/item_autonomo_documento" android:id="@+id/itemModeloTA0521" />
                    <include layout="@layout/item_autonomo_documento" android:id="@+id/itemContrato" />
                    <include layout="@layout/item_autonomo_documento" android:id="@+id/itemBaja" />
                    <include layout="@layout/item_autonomo_documento" android:id="@+id/itemVacaciones" />
                </LinearLayout>
            </LinearLayout>

            <!-- AGENDA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/borde_suave"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Agenda del aut贸nomo"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnAbrirAgenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abrir agenda personal"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1565C0"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- NUEVO: BLOQUE GASTOS E INGRESOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/borde_suave"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Control de ingresos y gastos"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnAbrirGastosIngresos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abrir registro"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Encabezado Generar factura -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ь Generar factura"
                    android:textColor="#00796B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Bot贸n Generar PDF -->
                <Button
                    android:id="@+id/btnGenerarFactura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generar PDF"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#00796B"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCerrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="end"
                    android:backgroundTint="#B71C1C"
                    android:text="Cerrar"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


